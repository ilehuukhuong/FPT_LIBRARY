@model PagedList.IPagedList<FPT_LIBRARY.Models.EF.Order>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Order List";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Order Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">Order List</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Order List</h3>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID Order</th>
                        <th>Customer name</th>
                        <th>Phone</th>
                        <th>Money</th>
                        <th>Status</th>
                        <th>Date created</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var items in Model)
                        {
                            <tr>
                                <td>@items.Code</td>
                                <td>@items.CustomerName</td>
                                <td>@items.Phone</td>
                                <td>@FPT_LIBRARY.Common.Common.FormatNumber(items.TotalAmount, 0)</td>
                                <td>@(items.TypePayment==1?"Wait Payment":"Paid")</td>
                                <td>@items.CreateDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="order/view/@items.Id" class="btn btn-sm btn-success">View</a>
                                    <a href="#" class="btn btn-sm btn-danger btnUpdate" data-id="@items.Id">Update</a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update Status</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderId" value="0" />
                <div class="form-group">
                    <label>Status</label>
                    <select class="form-control" id="ddStatus">
                        <option value="2">Paid
                        </option>
                    </select>
                </div>
                <p>One fine body&hellip;</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btnSave">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnUpdate', function () {
                var id = $(this).data("id");
                $('#txtOrderId').val(id);
                $('#modal-default').modal('show');
            });
            $('body').on('click', '.btnSave', function () {
                var id = $('#txtOrderId').val();
                var tt = $('#ddStatus').val();
                $.ajax({
                    url: '/admin/order/UpdateStatus',
                    type: 'POST' ,
                    data: { id: id, status: tt },
                    success: function (res) {
                        if (res.Success) {
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
}